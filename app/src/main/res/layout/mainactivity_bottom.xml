<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@drawable/main_line_background"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:id="@+id/note_relativeLayout"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:clickable="true">
        <ImageButton
            android:id="@+id/note_buttom"
            android:clickable="false"
            android:layout_width="24dp"
            android:layout_height="36dp"
            android:background="@drawable/note_normal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/camera_relativeLatout"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:clickable="true">
        <ImageButton
            android:id="@+id/camera_buttom"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/camera"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_relativeLayout"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:clickable="true">
        <ImageButton
            android:id="@+id/share_buttom"
            android:clickable="false"
            android:layout_width="24dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/share_normal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
