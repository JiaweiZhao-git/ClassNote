<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/bg_white">
   <View
    android:layout_width="match_parent"
    android:layout_height="32dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_write"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/main_left_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/djg"/>
        <TextView
            android:id="@+id/main_left_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="点击登陆"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp">
    </View>
    <LinearLayout
        android:id="@+id/main_left_user_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_write"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/djf"/>
        <TextView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="与我相关"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_left_user_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_write"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/djf"/>
        <TextView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的收藏"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp">
    </View>
    <LinearLayout
        android:id="@+id/main_left_user_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_write"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/djf"/>
        <TextView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的文件"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp">
    </View>
    <LinearLayout
        android:id="@+id/main_left_user_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_write"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/djf"/>
        <TextView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="反馈"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_left_user_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_write"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/djf"/>
        <TextView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设置"/>
    </LinearLayout>



</LinearLayout>