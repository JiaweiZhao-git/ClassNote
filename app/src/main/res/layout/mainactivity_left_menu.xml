<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"

        android:layout_marginBottom="10dp"
        android:background="@color/main_blue"
        android:layout_height="100dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_margin="4dp"
            android:id="@+id/main_left_user_default_image"
            android:layout_gravity="center"
            android:layout_width="50dp"
            app:riv_corner_radius="30dip"
            android:src="@drawable/share_defaultavatar"
            app:riv_border_color="#171717"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            app:riv_border_width="2dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/main_left_user_name"
            android:layout_marginLeft="60dp"
            android:textSize="30dp"
            android:text="点击登录"
            android:textColor="@color/font_write"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_left_pop_file"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:clickable="false"
            android:background="@drawable/slide_pop"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:text="导出文件"
            android:textSize="16sp"
            android:clickable="false"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_left_user_favorite"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:clickable="false"
            android:background="@drawable/slide_favor"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:clickable="false"
            android:text="我的收藏"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_left_user_zip_file"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:clickable="false"
            android:background="@drawable/slide_file"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:clickable="false"
            android:text="我的文件"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_left_user_related"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:clickable="false"
            android:background="@drawable/slide_aboutme"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:clickable="false"
            android:text="与我相关"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_left_settings"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:clickable="false"
            android:background="@drawable/slide_settings"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:clickable="false"
            android:text="设置"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_left_feedback"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:clickable="false"
            android:background="@drawable/slide_callback"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="30dp"
            android:clickable="false"
            android:text="反馈"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>