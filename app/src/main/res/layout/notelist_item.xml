<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notelistitem_image"
        android:layout_width="40dp"
        android:layout_height="48dp"

        />

    <TextView
        android:id="@+id/notelistitem_text_big"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:layout_alignTop="@id/notelistitem_image"
        android:layout_toRightOf="@+id/notelistitem_image"
        android:text="某一天"
        android:textSize="16sp"
        android:textColor="@color/font_black" />

    <TextView
        android:id="@+id/notelistitem_text_small"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/notelistitem_image"
        android:layout_toRightOf="@+id/notelistitem_image"
        android:text="某个梦里遇见了某个你"
        android:textColor="@color/font_gray"
        android:textSize="8sp"/>

</RelativeLayout>
